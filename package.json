{
  "name": "batchclip",
  "private": true,
  "version": "1.0.1",
  "description": "BatchClip - 视频批量剪辑与 LUT 导出工具",
  "author": "Tom6255",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:win": "tsc && vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win",
    "build:win:ps1": "powershell -ExecutionPolicy Bypass -File build-win.ps1",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:all": "tsc && vite build && electron-builder --win --mac",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "clsx": "^2.1.1",
    "exiftool-vendored": "^35.0.0",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}

